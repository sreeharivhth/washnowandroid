<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wash.midest.com.mrwashapp.screens.ForgotPassActivity">


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/component_margin_10"
        android:layout_marginLeft="@dimen/component_margin_16"
        android:layout_marginRight="@dimen/component_margin_16"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/forgot_pass_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:focusedByDefault="true"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_color"
            android:maxLength="30"/>
    </android.support.design.widget.TextInputLayout>

        <wash.midest.com.mrwashapp.uiwidgets.PinEntryEditText
            android:id="@+id/otpView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:focusedByDefault="true"
            android:layout_marginLeft="@dimen/component_margin_16"
            android:layout_marginRight="@dimen/component_margin_16"
            android:layout_marginTop="50dp"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/send_otp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/component_margin_50"
            android:layout_marginRight="@dimen/component_margin_50"
            android:layout_marginTop="63dp"
            android:theme="@style/AppButtonTheme"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="@string/send_otp"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_13"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
