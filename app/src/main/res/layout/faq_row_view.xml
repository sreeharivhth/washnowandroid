<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/component_margin_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/faq_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/component_margin_5"
        android:text="faq_question"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/faq_answer"
        app:layout_constraintTop_toBottomOf="@id/faq_question"
        app:layout_constraintLeft_toRightOf="parent"
        android:text="faq_answer"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/component_margin_5"
        />

    <View
        android:id="@+id/spinnerSpaceBelow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/component_margin_5"
        android:layout_marginBottom="@dimen/component_margin_10"
        app:layout_constraintTop_toBottomOf="@id/faq_answer"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>