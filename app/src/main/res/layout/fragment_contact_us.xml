<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llForOverlapingIssue"
        android:orientation="vertical"
        >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/component_margin_16"
        app:cardCornerRadius="@dimen/component_margin_10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/component_margin_5"
        android:layout_marginRight="@dimen/component_margin_5"
        android:layout_marginLeft="@dimen/component_margin_5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/component_margin_16"
            android:layout_marginLeft="@dimen/component_margin_16"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/email"
                android:layout_marginBottom="@dimen/component_margin"
                android:layout_marginTop="@dimen/component_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:text=""
                android:layout_marginBottom="@dimen/component_margin"
                android:clickable="true"
                android:padding="@dimen/component_margin_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/call_us"
                android:layout_marginBottom="@dimen/component_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_num"
                android:text=""
                android:layout_marginBottom="@dimen/component_margin"
                android:clickable="true"
                android:padding="@dimen/component_margin_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/action_contact_us"
                android:layout_marginBottom="@dimen/component_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_address"
                android:text=""
                android:layout_marginBottom="@dimen/component_margin"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBarLoading"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        />

</FrameLayout>